<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@android:color/black">

    <LinearLayout
        android:id="@+id/panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="30dp"
        android:padding="10dp">

        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textColor="@android:color/darker_gray"
            android:textSize="40sp"
            app:fontFamily="@font/aldrich"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/game_title"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="0"
            android:textColor="@android:color/darker_gray"
            android:textSize="40sp"
            app:fontFamily="@font/aldrich" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="35dp"
            android:layout_marginStart="35dp"
            >

            <ImageView
                android:id="@+id/button_restart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="50dp"
                android:layout_marginEnd="50dp"
                android:onClick="restartClick"
                android:textAllCaps="false"
                />

            <ImageView
                android:id="@+id/toggleButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:onClick="toggleSound"
                android:textAllCaps="false"
                />

        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/panel"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        >

        <ImageView
            android:id="@+id/green_light"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/colorGreen"
            android:onClick="onClick"
            android:layout_columnWeight="0"
            android:layout_rowWeight="0"
            />

        <ImageView
            android:id="@+id/red_light"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/colorRed"
            android:onClick="onClick"
            android:layout_columnWeight="1"
            android:layout_rowWeight="0"
            />

        <ImageView
            android:id="@+id/yellow_light"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/colorYellow"
            android:onClick="onClick"
            android:layout_columnWeight="0"
            android:layout_rowWeight="1"
            />

        <ImageView
            android:id="@+id/blue_light"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:background="@color/colorBlue"
            android:onClick="onClick"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            />

    </GridLayout>
</RelativeLayout>